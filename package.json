    "migrate":"yarn build && sequelize db:migrate"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/moment": "^2.13.0",
    "@types/multer": "^1.4.7",
    "@types/node": "^17.0.34",
    "@types/sequelize": "^4.28.13",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "eslint": "^8.15.0",
    "prettier": "^2.6.2",
    "sequelize-cli": "^6.4.1",
    "supertest": "^6.2.3",
    "ts-jest": "^28.0.2",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.6.4"
  },
  "dependencies": {
    "@socket.io/redis-adapter": "^7.2.0",
    "@types/jest": "^27.5.1",
    "celebrate": "^15.0.1",
    "dotenv": "^16.0.1",
    "eslit": "^6.0.0",
    "express": "^4.18.1",
    "jest": "^28.1.0",
    "moment": "^2.29.3",
    "multer": "^1.4.4",
    "mysql2": "^2.3.3",
    "redis": "^4.1.0",
    "sequelize": "^6.19.2",
    "socket.io": "^4.5.1",
    "uuid": "^8.3.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testTimeout": 10000,
    "setupFilesAfterEnv": [
      "./src/test/setup.ts"
    ]
  }
}
