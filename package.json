{
  "name": "nodejs-template",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "ts-node-dev ./src/index",
    "build": "tsc",
    "setup": "npx sequelize db:migrate && npx sequelize db:seed",
    "production": "node dist/index",
    "test": "jest --watchAll --no-cache",
